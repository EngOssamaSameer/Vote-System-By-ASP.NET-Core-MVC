@model Vote

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Voting</h4>
        <p class="card-description"> @ViewBag.VoteType.Name </p>
        <form class="forms-sample"
            method="post"
            enctype="multipart/form-data"
            asp-controller="Home"
            asp-action="Save"
        >
            <div class="form-group">
                <label for="exampleInputName1">Name</label>
                <input type="text" class="form-control"  placeholder="Name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Country</label>
                <input type="text" class="form-control"  placeholder="Country" asp-for="Country">
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Email</label>
                <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="VoteString" asp-for="VoteString" value="@ViewBag.VoteType.TypeOne"> @ViewBag.VoteType.TypeOne <i class="input-helper"></i>
                </label><br /><br />
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="VoteString" asp-for="VoteString" value="@ViewBag.VoteType.TypeTwo"> @ViewBag.VoteType.TypeTwo <i class="input-helper"></i>
                </label><br /><br />
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="VoteString" asp-for="VoteString" value="@ViewBag.VoteType.TypeThere"> @ViewBag.VoteType.TypeThere <i class="input-helper"></i>
                </label><br /><br />
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="VoteString" asp-for="VoteString" value="@ViewBag.VoteType.TypeFour"> @ViewBag.VoteType.TypeFour <i class="input-helper"></i>
                </label><br /><br /><br /> 
                <span asp-validation-for="VoteString" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label for="exampleInputUsername1">
                        Uploade Image
                    </label>
                    <input asp-for="Image" type="file" name="Files"
                           class="form-control" placeholder="select file .jpg, .jpeg, .png, ,.gif"
                           onchange="Upload.UploadDefaultImg(event)" accept=".jpg, .jpeg, .png, ,.gif">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>

@section Secript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}